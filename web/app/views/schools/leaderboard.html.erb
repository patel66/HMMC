<link href='http://fonts.googleapis.com/css?family=Henny+Penny' rel='stylesheet' type='text/css'>
<div class='row'>
  <div class='col-md-2'>
  </div>
  <div class='col-md-8'>
<table class='leaderTable'>
    <tr>
      <th COLSPAN="3" class='leaderHeader'> Top SCHOOLS
      </th>
    </tr>
    <% school_array = @top_school_array[0..25] %>
    <tr>   <th class='rank'>Rank</th>      <th>School</th>      <th class='mile'>Miles</th>      </tr>
    <% school_array.each do |school| %>

      <tr>   <td class='rank'>1</td>      <td><%= school.name %> </td>      <td class='miles'> <%= school.total_miles_school %> </td>      </tr>

    <% end %>

    <th colspan='3' class='tableFooter'> </th>
</table>
  </div>

  <div class='col-md-2'>
  </div>
</div>
